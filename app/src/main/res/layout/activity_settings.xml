<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_language"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_mardy"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/img_mardy" />

    <Button
        android:id="@+id/btn_english"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:background="@color/black"
        android:textColor="@color/white"
        android:fontFamily="@font/berkshire_swash"
        android:text="@string/btn_english"
        android:textAllCaps="false"
        app:autoSizeTextType="uniform" />

    <Button
        android:id="@+id/btn_spanish"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="97dp"
        android:fontFamily="@font/berkshire_swash"
        android:gravity="center"
        android:text="@string/btn_spanish"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:autoSizeTextType="uniform"
        android:background="@drawable/border"/>

    <Button
        android:id="@+id/settings_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/border"
        android:text="@string/settings_home"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/settings_calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="550dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/border"
        android:text="@string/setting_calculator"
        android:textColor="@color/white" />

    </RelativeLayout>


